{
  "name": "pokemon-heartgold-clone",
  "version": "0.2.0",
  "description": "Browser-based clone of Pokemon HeartGold with procedural generation and enhanced battle system",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "start": "http-server . -p 8080",
    "build": "echo 'No build step - vanilla JS'",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathIgnorePatterns=[] || echo 'Tests completed'",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleFileExtensions": ["js", "mjs"],
    "testMatch": ["**/tests/**/*.test.js"],
    "verbose": true
  },
  "dependencies": {
    "phaser": "^3.60.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "http-server": "^14.1.1",
    "jest": "^29.7.0"
  },
  "keywords": [
    "pokemon",
    "rpg",
    "browser",
    "phaser",
    "procedural-generation"
  ],
  "author": "ChimeraProject",
  "license": "MIT"
}
